part_one = fn input ->
  %{seeds: seeds, maps: maps} = parse_string.(input)

  maps
  |> Enum.reduce(seeds, fn [_s, _d, map], acc -> acc |> Enum.map(&Map.get(map, &1, &1)) end)
  |> Enum.min()
end

